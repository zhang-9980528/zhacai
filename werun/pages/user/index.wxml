<!--pages/user/index.wxml-->
<view class="container">
  <image class="head" src="{{avatarUrl}}"></image>
  <view class="user">
    <view class="item">
      <text>用户名</text>
      <view>{{name}}</view>
    </view>
    <view class="item">
      <text>性别</text>
      <view>{{gender?'男':'女'}}</view>
    </view>
    <view class="item">
      <text>地址</text>
      <view>{{location}}</view>
    </view>
  </view>
</view>
