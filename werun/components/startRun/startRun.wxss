/* components/startRun/startRun.wxss */
@import "../../dist/wexUI/wexUI.wxss";
@import "../../app.wxss";

.container{
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}
.showData{
  width: 100%;
  height: 180rpx;
  display: flex;
  font-size: 32rpx;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.showData text{
  letter-spacing: 12rpx;
  font-weight: 600;
  color: #ff531a;
}
.start{
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background-color: #ff531a;
  position: relative;
}
.start image{
  width: 128rpx;
  height: 128rpx;
  position: relative;
  left: 50%;
  top: 50%;
  translate: -50% -50%;
}
.goal{
  width: 100%;
  display: flex;
  justify-content: space-evenly;
}
.input-number-input{
  width: 100rpx;
  height: 50rpx;
}
.input-number .adjust{
  position: absolute;
  top: 44%;
  left: 60%;
  width: 0px;
  height: 0px;
  border-width: 14rpx;
  border-style: solid;
  border-color: #333 transparent transparent transparent;
}
.input-number.size-small input{
  width: 120rpx;
}
.input-number .input-number-label{
  border-radius: 50%;
  font-size: 44rpx;
}
.my-modal{
  border-radius: 50%;
}