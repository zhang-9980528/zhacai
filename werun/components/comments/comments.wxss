/* pages/comments/index.wxss */
/* components/comments/comments.wxss */
.container{
  display: flex;
  height: 100%;
  flex-direction: column;
}
.comment-item{
  width: 95%;
  height: 100%;
  padding-top: 40rpx;
  margin: 0 20rpx;
}
.avatar{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.nickname{
  padding-left: 20rpx;
  font-size: 36rpx;
}
.content{
  width: 100%;
  height: 220rpx;
  padding: 20rpx;
  font-size: 38rpx;
  box-sizing: border-box;
}
.search-textarea{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
}
.searchbox{
  width: 94%;
}
.submitbox{
  width: 500rpx;
}
.confirm{
  background-color: #ff531a;
  color: #fff;
  width: 60% !important;
  height: 76rpx !important;
  font-size: 30rpx;
  line-height: 50rpx;
}

.wexui-searchbox {
  position: relative;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  transition: all 0.2s;
  font-size: 28rpx;
}

.wexui-searchbox .searchbox-input {
  padding: 16rpx 18rpx;
  flex: 1;
  background: #fff;
  -webkit-box-flex: 1;
}

.wexui-searchbox .searchbox-input form input {
  text-align: left;
}

.wexui-searchbox .searchbox-input form input:not(:first-child) {
  padding-left: 40rpx;
}
.form{
  height: 80rpx;
}
.formDiv{
  width: 116%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.form .formDiv view{
  width: 46%;
}
.time{
  position: relative;
  top: -150rpx;
  left: 476rpx;
}
